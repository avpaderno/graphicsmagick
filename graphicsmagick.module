    'GIF87' => 'gif',
    'ICB' => 'icb',
    'JPEG' => 'jpeg',
    'JPG' => 'jpg',
    'PAM' => 'pam',
    'PBM' => 'pbm',
    'PDF' => 'pdf',
    'PGM' => 'pgm',
    'PICON' => 'xpm',
    'PNG' => 'png',
    'PNG00' => 'png',
    'PNG24' => 'png',
    'PNG32' => 'png',
